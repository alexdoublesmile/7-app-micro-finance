<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation=
                "http://www.liquibase.org/xml/ns/dbchangelog
                http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
>

    <changeSet id="1" author="developer">
        <createTable tableName="request" remarks="Запросы на покупку акций">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="person_id" type="uuid" remarks="Участник, запросивший покупку">
                <constraints nullable="false"/>
            </column>
            <column name="stock_code" type="varchar(10)" remarks="Код ценной бумаги">
                <constraints nullable="false"/>
            </column>
            <column name="stock_count" type="int" remarks="Количество запрашиваемых ценных бумаг">
                <constraints nullable="false"/>
            </column>
            <column name="request_date" type="date" remarks="Дата регистрации запроса">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>